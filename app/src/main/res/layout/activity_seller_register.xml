<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/seller_image_register"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/seller"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/seller_txt_registr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/seller_image_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Seller Registration Form"
            android:textColor="#03B3A2"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_name_register_edly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_name"
            app:layout_constraintTop_toBottomOf="@+id/seller_txt_registr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="4dp"
            android:hint="Name"
            android:textColorHint="#80000000"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_name_register_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_phone_register_edly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/seller_name_register_edly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:startIconDrawable="@drawable/ic_phone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Phone"
            android:textColorHint="#80000000"
            app:errorEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_phone_register_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:inputType="phone"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_email_register_edly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/seller_phone_register_edly"
            app:layout_constraintStart_toStartOf="parent"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Email"
            android:textColorHint="#80000000"
            app:errorEnabled="true"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_email_register_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_password_register_edly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/seller_email_register_edly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:startIconDrawable="@drawable/ic_lock"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Password"
            android:textColorHint="#80000000"
            app:errorEnabled="true"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/colorAccent"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_password_register_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_address_register_edly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/seller_password_register_edly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:startIconDrawable="@drawable/ic_baseline_business_center_24"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Shop,Business Address"
            android:textColorHint="#80000000"
            app:errorEnabled="true"
            app:boxStrokeColor="@color/colorAccent"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_address_register_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seller_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/seller_address_register_edly"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="21sp"
            app:cornerRadius="16dp"
            android:textAllCaps="false"
            android:backgroundTint="#03B3A2"
            />


        <TextView
            android:id="@+id/tv_seller_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/text_seller_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_seller_register"
            android:gravity="center"
            android:textColor="#03B3A2"
            android:autoLink="all"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:textAllCaps="false"
            android:textSize="@dimen/_16sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>